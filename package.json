{
  "name": "quiz-build-system",
  "version": "1.0.0",
  "description": "",
  "main": "dev/js/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && mkdir -p build && npm run build:html && npm run build:css && npm run build:js",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "clean": "rm -rf build",
    "clean:html": "rm -f build/index.html",
    "clean:css": "rm -f build/quiz-build-sytem.css build/quiz-build-sytem.css.map",
    "clean:js": "rm -f build/$npm_package_name$npm_package_version.js build/$npm_package_name$npm_package_version.js.map",
    "build:html": "npm run clean:html && cp dev/html/index.html build/",
    "build:css": "npm run clean:css && lessc --source-map dev/css/style.less build/$npm_package_name$npm_page_version.css",
    
    "build:js": "npm run clean:js && webpack",
    "watch:html": "npm run build:html && chokidar dev/html/index.html -c 'npm run build:html'",
    "watch:css": "npm run build:css && chokidar **.less -c 'npm run build:css'",
    "watch:js": "npm run build:js && webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yolixtly/quiz-build-system.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yolixtly/quiz-build-system/issues"
  },
  "homepage": "https://github.com/yolixtly/quiz-build-system#readme",
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "chokidar-cli": "^1.2.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "uglify-js": "^2.7.3",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "jquery": "^3.1.0"
  }
}
